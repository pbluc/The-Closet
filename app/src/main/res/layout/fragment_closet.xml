<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ClosetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        
        <ImageButton
            android:id="@+id/imageButtonAddClosetItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@null"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonBackCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonTopsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOPS"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/buttonBottomsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bottoms"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonOnePiecesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="One Pieces"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonDressesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dresses"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonShoesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shoes"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonUnderwearCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Underwear"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonBagsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bags"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonHatsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hats"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonOuterwearCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outerwear"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonGlovesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gloves"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonScarvesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scarves"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonTiesCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ties"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonSwimsuitsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Swimsuits"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/buttonBrasCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bras"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

        </HorizontalScrollView>
        
    </LinearLayout>

</FrameLayout>